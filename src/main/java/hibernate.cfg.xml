<?xml version='1.0' encoding='utf-8'?>



<hibernate-configuration>

   
    <session-factory>
		
		<!-- JDBC related Configuration -->
        <!-- properties -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/school</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Hansraj@123</property>
        
        
        <!-- Hibernate related Configuration -->
        <!-- CREATE = Create a table (if table found drop and create new) -->
        
        <!-- UPDATE = Create a table (if table NOT found create , otherwise reuse the existing one) -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        
        <!-- Informing ORM to generate the query as per DBE -->
         <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
         
         <!-- To display the query generated by ORM -->
        <property name="hibernate.show_sql">true</property>
        
        <!-- To display the query generated by ORM in proper format -->
         <property name="hibernate.format_sql">true</property>
         
         <!-- Provide hikari cp configuration details -->
         <property name="hibernate.connection.provider_class">org.hibernate.hikaricp.internal.HikariCPConnectionProvider</property>
  			  <property name="hibernate.hikari.maximumPoolSize">30</property>
  			    <property name="hibernate.hikari.connectionTimeout">5000</property>
  			    
  			    <!-- when pool is created it maintain 10 object in idle state -->
  			      <property name="hibernate.hikari.minimumIdle">10</property>
  			        <property name="hibernate.hikari.idleTimeout">3000</property>

    
    
             
    </session-factory>

</hibernate-configuration>